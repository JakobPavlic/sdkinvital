.row-fluid
  /bootstrap galerija
  %div{:id => "Galerija", :class => "carousel slide"}
    %ol{:class => "carousel-indicators"}
      %li{"data-target" => "#Galerija", "data-slide-to" => "0", :class => "active"}
      %li{"data-target" => "#Galerija", "data-slide-to" => "1"}
      %li{"data-target" => "#Galerija", "data-slide-to" => "2"}
    
    %div{:class => "carousel-inner"}
      %div{:class => "active item"}
        %img{:src => "http://placehold.it/900x450", :title => "KinRun"}
        %div{:class => "carousel-caption"}
          %p.lead
            Kin
            =link_to 'Run', exercise_path(1)
      %div{:class => "item"}
        %img{:src => "http://placehold.it/900x450", :title => "KinFlow"}
        %div{:class => "carousel-caption"}
          %p.lead
            Kin
            =link_to 'Flow', exercise_path(2)
      %div{:class => "item"}
        %img{:src => "http://placehold.it/900x450", :title => "KIN:raztezanje"}
        %div{:class => "carousel-caption"}
          %p.lead
            Kin: Extreme
        
    %a{:class => "carousel-control left", :href => "#Galerija", "data-slide" => "prev"}
      &lsaquo;
    %a{:class => "carousel-control right", :href => "#Galerija", "data-slide" => "next"}
      &rsaquo;
        
  :javascript
    $(document).ready(function(){
      $('.carousel').carousel();
    });
.row-fluid    
  .span8
    -@posts.each do |post|
      %h2
        = link_to post.title, post
      %p
        =link_to post.user.name, user_path(post.user)
      %p
        =raw post.content[0,400]+"..."
        =link_to "+veƒç", post
      %hr
  .span4
    =render 'layouts/mailchimp'
    =render 'layouts/timeline'

