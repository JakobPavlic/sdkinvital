- if @current_user
  %p.welcome Welcome, #{@current_user.name}!
  = link_to 'Log Out', logout_path
- else
  %p.login= link_to 'Log in with your Google account', "/auth/google_oauth2"

.row-fluid
  %div{:id => "Galerija", :class => "carousel slide"}
    %ol{:class => "carousel-indicators"}
      %li{"data-target" => "#Galerija", "data-slide-to" => "0", :class => "active"}
      %li{"data-target" => "#Galerija", "data-slide-to" => "1"}
      %li{"data-target" => "#Galerija", "data-slide-to" => "2"}
    
    %div{:class => "carousel-inner"}
      %div{:class => "active item"}
        %img{:src => "http://placehold.it/900x450", :title => "KIN:Bootcamp"}
        %div{:class => "carousel-caption"}
          %p.lead
            Kin: joga
      %div{:class => "item"}
        %img{:src => "http://placehold.it/900x450", :title => "KIN:Upokojenci"}
        %div{:class => "carousel-caption"}
          %p.lead
            Kin: Tek
      %div{:class => "item"}
        %img{:src => "http://placehold.it/900x450", :title => "KIN:raztezanje"}
        %div{:class => "carousel-caption"}
          %p.lead
            Kin: Extreme
        
    %a{:class => "carousel-control left", :href => "#Galerija", "data-slide" => "prev"}
      &lsaquo;
    %a{:class => "carousel-control right", :href => "#Galerija", "data-slide" => "next"}
      &rsaquo;
        
  :javascript
    $(document).ready(function(){
      $('.carousel').carousel();
    });
