- @posts.each do |post|
  %h3
    = link_to post.title, post
  %small
    %i.icon-user
    = link_to post.instructor.name, instructor_path(post.instructor)
    =post.created_at.strftime("%d %b. %Y")
    =post.created_at.strftime("%H:%M")
  %p
    = post.content.slice(0..200)+"..."
    = link_to 'VeÄ <i class="icon-plus"></i>'.html_safe, post
