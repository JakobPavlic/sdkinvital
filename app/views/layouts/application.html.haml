%html{"xmlns:fb" => "http://ogp.me/ns/fb#"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "ŠD Kin"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %meta{"property" => "og:title", :content => "&#x160;portno dru&#x161;tvo KinVital"}
    %meta{"property" => "og:type", :content => "sport"}
    %meta{"property" => "og:url", :content => "http://kinvital.herokuapp.com"}
    %meta{"property" => "og:image", :content => "http://i1343.photobucket.com/albums/o782/jakob-pavlic/DSCN4902_zps17865775.jpg"}
    %meta{"property" => "og:site_name", :content => "KinVital"}
    %meta{"property" => "fb:app_id", :content => "178312275649225"}
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    =yield(:head)
    /[if lt IE 9]
      %script{ :src => '//html5shiv.googlecode.com/svn/trunk/html5.js' }
  %body    
    %div{:class => "container"}
      .masthead
        %h3.muted
          Športno društvo KinVital
        .navbar
          .navbar-inner
            .container
              =render 'layouts/navigation'
      #main{:role => "main"}
        .container
          .content
            = render 'layouts/messages'
            = yield
        
    
